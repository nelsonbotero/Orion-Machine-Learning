	log_N_3=log(N_3+1);
	log_N_2=log(N_2+1);
	log_N_1=log(N_1+1);
	log_August=log(August+1);
	log_February=log(February+1);
	log_July=log(July+1);
	log_November=log(November+1);
	log_October=log(October+1);
	log_April=log(April+1);
	log_March=log(March+1);
	log_May=log(May+1);
	log_December=log(December+1);
	log_January=log(January+1);
