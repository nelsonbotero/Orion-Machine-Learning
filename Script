if Orion= . THEN Orion = 0;
if Shoes= . THEN Shoes = 0;
if TShirts = . THEN TShirts = 0;
if TrackerClothes = . THEN TrackerClothes = 0;
if TrackerShoes = . THEN TrackerShoes = 0;
if OrionClothing = . THEN OrionClothing = 0;
